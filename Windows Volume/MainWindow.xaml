<Window x:Class="Windows_Volume.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Volume"
        mc:Ignorable="d"
        Title="Microphone Volume Set" Height="150" Width="500">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Center">Current microphone volume</TextBlock>
            <Slider Margin="50 10" x:Name="slider" Minimum="0" Maximum="100"/>
        </StackPanel>

    </Grid>
</Window>
